FROM ubuntu:xenial

RUN apt-get -y update

# basic setup
RUN apt-get -y update && apt-get install -y  \
    sudo \
    locales  \
    && \
    locale-gen en_US.UTF-8


# Add user
RUN adduser blaster \
      --gecos GECOS \
      --disabled-password  \
    && \
    adduser blaster sudo \
    && \
    echo blaster:password | chpasswd


