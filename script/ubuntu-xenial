FROM ubuntu:xenial


# build-essential
RUN apt-get -y update && apt-get install -y  \
  build-essential

# build scripts
RUN apt-get install -y \
  cmake \
  autoconf \
  automake \
  libtool \
  autoconf-archive \
  autotools-dev

